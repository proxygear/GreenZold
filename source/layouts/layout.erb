    <%= javascript_include_tag "site" %>
    <script type="text/javascript" src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>
  <body class="">
    <%= partial "components/header" %>
    <%= yield %>
    <%= partial "components/footer.#{locale}" %>
  </body>
</html>
